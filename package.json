{
  "name": "clean-ts-api",
  "version": "3.0.0",
  "description": "NodeJs REST API with Typescript, TDD, Clean Architecture and SOLID principles",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc -p tsconfig.prod.json",
    "postbuild": "copyfiles -u 1 public/**/* dist/static",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "tsc:w": "tsc -p tsconfig.prod.json -w",
    "up": "npm run build && docker compose up -d",
    "down": "docker compose down",
    "check": "npm-check -s -u",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:watch": "npm test -- --watch",
    "test:watch:v": "jest --passWithNoTests --noStackTrace --runInBand --watch",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:unit:v": "jest --passWithNoTests --noStackTrace --runInBand --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:integration:v": "jest --passWithNoTests --noStackTrace --runInBand --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@shelf/jest-mongodb": "^4.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.7",
    "copyfiles": "^2.4.1",
    "coveralls": "^3.1.1",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "mockdate": "^3.0.5",
    "npm-check": "^6.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "graphql": "^16.8.1",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "mongodb": "^6.3.0",
    "nodemon": "^3.0.2",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.11.0"
  },
  "engines": {
    "node": "18.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
