{
  "name": "clean-ts-api",
  "version": "2.1.0",
  "description": "NodeJs REST API with Typescript, TDD, Clean Architecture and SOLID principles",
  "main": "index.js",
  "scripts": {
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "start:clean": "npm run build && npm run start",
    "tsc:w": "tsc -p tsconfig.prod.json -w ",
    "up": "npm run build && docker compose up -d",
    "down": "docker compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:watch": "npm test -- --watch",
    "test:watch:v": "jest --passWithNoTests --noStackTrace --runInBand --watch",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:unit:v": "jest --passWithNoTests --noStackTrace --runInBand --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:integration:v": "jest --passWithNoTests --noStackTrace --runInBand --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.7",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^20.2.5",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.17",
    "coveralls": "^3.1.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^4.0.6",
    "jest": "^29.5.0",
    "lint-staged": "^11.1.2",
    "mockdate": "^3.0.5",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.1",
    "module-alias": "^2.2.3",
    "mongodb": "^5.6.0",
    "nodemon": "^3.0.1",
    "validator": "^13.9.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
